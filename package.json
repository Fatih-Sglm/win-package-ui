{
  "name": "winget-ui",
  "version": "0.1.0",
  "private": true,
  "main": "dist-electron/background.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "build:preload": "esbuild src/preload.ts --bundle --platform=node --outfile=dist-electron/preload.js --external:electron",
    "electron:dev": "npm run build:preload && concurrently -k \"npm run dev\" \"wait-on http://localhost:5173 && cross-env NODE_ENV=development electron -r tsx/cjs ./src/background.ts\"",
    "electron:build": "vite build && electron-builder"
  },
  "dependencies": {
    "@vueuse/core": "^14.1.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-vue-next": "^0.561.0",
    "node-powershell": "^5.0.1",
    "pinia": "^3.0.4",
    "reka-ui": "^2.6.1",
    "tailwind-merge": "^3.4.0",
    "tailwindcss-animate": "^1.0.7",
    "vue": "^3.3.4",
    "vue-i18n": "^11.2.2"
  },
  "devDependencies": {
    "@types/node": "^25.0.1",
    "@vitejs/plugin-vue": "^4.1.0",
    "autoprefixer": "^10.4.22",
    "concurrently": "^8.0.0",
    "cross-env": "^10.1.0",
    "electron": "^26.0.0",
    "electron-builder": "^24.0.0",
    "electron-devtools-installer": "^4.0.0",
    "esbuild": "^0.27.1",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.19",
    "tsx": "^4.21.0",
    "typescript": "^5.5.0",
    "vite": "^5.0.0",
    "wait-on": "^7.0.0"
  }
}